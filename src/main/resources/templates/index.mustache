{{>layout/header}}

    <h1>Spring Boot Index Page</h1>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
            </div>
        </div>
        <br/>
        <table class="table table-horizontal table-bordered">
            <thead class="thread-strong">
                <tr>
                    <th>게시글 번호</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>최종수정일</th>
                </tr>
            </thead>
            <tbody id="tbody">
                {{#posts}}
                    <tr>
                        <th>{{id}}</th>
                        <th><a href="/posts/update/{{id}}">{{title}}</a></th>
                        <th>{{author}}</th>
                        <th>{{modifiedDate}}</th>
                    </tr>
                {{/posts}}
            </tbody>
        </table>
    </div>

{{>layout/footer}}